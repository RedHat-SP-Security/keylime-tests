FROM docker.io/redhat/ubi9:9.2
COPY id_*.pub /root/
RUN dnf install -y systemd util-linux-core openssh openssh-server && \
  dnf clean all && \
  ssh-keygen -A && \
  mkdir -p /root/.ssh && \
  cat /root/id_*.pub > /root/.ssh/authorized_keys && \
  chmod 700 /root/.ssh/authorized_keys
CMD ["/sbin/init"]
