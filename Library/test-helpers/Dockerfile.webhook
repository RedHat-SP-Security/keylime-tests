FROM quay.io/centos/centos:stream9

RUN dnf makecache && \
    dnf install -y openssl && \
    dnf clean all && \
    rm -rf /var/cache/dnf/*

ENV WEBHOOK_SERVER_PORT 8080

EXPOSE $WEBHOOK_SERVER_PORT

CMD ["/usr/bin/bash", "-c", "openssl s_server -debug -cert /var/tmp/webhook/server-cert.crt -key /var/tmp/webhook/server-private.pem -pass pass:default -CAfile /var/tmp/webhook/cacert.crt -port ${WEBHOOK_SERVER_PORT} &> /var/tmp/webhook/revocation_log"]
